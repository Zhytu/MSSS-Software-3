<Window x:Class="Admin_Panel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Admin_Panel"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="402" Width="800">
    <DockPanel LastChildFill="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BtnCreate" Grid.Column="0" Margin="5" Click="BtnCreate_Click" IsEnabled="False">Create New Listing</Button>
                <Button x:Name="BtnUpdate" Grid.Column="1" Margin="5" Click="BtnUpdate_Click">Update Existing Listing</Button>
                <Button x:Name="BtnDelete" Grid.Column="2" Margin="5" Click="BtnDelete_Click">Delete Existing Listing</Button>
                
                
            </Grid>
            <DockPanel LastChildFill="False" Grid.Row="1">
                <Label DockPanel.Dock="Top" Margin="3" >Current ID</Label>
                <TextBox x:Name="Data1" DockPanel.Dock="Top" Margin="5" Text="{Binding DisplayedID, Mode=TwoWay}" IsReadOnly="True" MaxLength="9"/>
                <Label DockPanel.Dock="Top" Margin="3" >Name</Label>
                <TextBox x:Name="Data2" DockPanel.Dock="Top" Margin="5" Text="{Binding DisplayedName, Mode=TwoWay}"/>
                <Label DockPanel.Dock="Top" Margin="3" >Date of Birth</Label>
                <TextBox x:Name="Data3" DockPanel.Dock="Top" Margin="5" IsReadOnly="True" Foreground="LightGray">Date of birth...</TextBox>
                <Label DockPanel.Dock="Top" Margin="3" >Date of Hiring</Label>
                <TextBox x:Name="Data4" DockPanel.Dock="Top" Margin="5" IsReadOnly="True" Foreground="LightGray">Date of hiring...</TextBox>
                <StatusBar DockPanel.Dock="Bottom" Width="auto" Height="17.96">
                    <TextBlock Name="myStatusBarText" Opacity="100" VerticalAlignment="Center"/>
                </StatusBar>
            </DockPanel>
            
        </Grid>
    </DockPanel>

</Window>
